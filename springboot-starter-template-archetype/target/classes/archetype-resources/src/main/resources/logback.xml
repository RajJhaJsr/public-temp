#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--      https://logback.qos.ch/manual/layouts.html${symbol_pound}coloring    %ex -->
            <pattern>%yellow(%d{HH:mm:ss.SSS}) %highlight(%5p) %magenta([%5.5t]) %cyan(%-35.35logger{35}) : %m%n%red(%rEx{3})</pattern>
        </encoder>
    </appender>


    <root level="INFO">
        <appender-ref ref="console"/>
    </root>

</configuration>
